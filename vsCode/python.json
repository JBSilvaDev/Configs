{
    "python.analysis.autoImportCompletions": true,
    "python.analysis.fixAll": ["source.unusedImports"],  
    "editor.defaultFormatter": "ms-python.black-formatter",
    "files.exclude": {
        "**/__pycache__": true,
        "**/.cache": true,
        "**/.coverage": true,
        "**/.coverage.*": true,
        "**/.hypothesis": true,
        "**/.mypy_cache": true,
        "**/.nox": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true,
        "**/.tox": true
    },
    "git.openRepositoryInParentFolders": "always",
    "files.autoSave": "afterDelay",
    "workbench.colorTheme": "Omni",
    "RainbowBrackets.depreciation-notice": false,
    "workbench.iconTheme": "vscode-icons",
    "[python]": {
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.formatOnType": true,
        "editor.wordBasedSuggestions": false,
        "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "workbench.colorCustomizations": {
         // Barras de opções lateral
        "activityBar.foreground": "#e7913b",
        "activityBar.background": "#070707",
        "activityBar.inactiveForeground": "#c4c1c1",
        
        // Editor 
        "editor.background": "#000000",
        "editor.lineHighlightBorder": "#e7913b10",
        "editorGroup.border": "#775e4454",
        "editorGroupHeader.tabsBorder": "#775e4454",
        
        // Abas
        "tab.activeBorder": "#ff0000",
        "tab.activeForeground": "#ffffff",
        "tab.inactiveBackground": "#000000",
        "tab.inactiveForeground": "#dfdddd",
        "editorGroupHeader.tabsBackground": "#070707",
        // Menu de pastas
        "sideBar.background": "#070707",
        "sideBar.border": "#775e4454",
        "sideBarSectionHeader.background": "#070707",
        "sideBar.foreground":"#dfdddd",
        // Terminal
        "terminal.background": "#070707",
        "panel.background": "#070707",
        "panel.border": "#775e4454",
        "panelTitle.activeBorder": "#ee0303",
        "panelTitle.inactiveForeground": "#c4c1c1",
        // Barra titulo
        "titleBar.activeBackground": "#070707",
        "titleBar.activeForeground": "#dfdddd",
        

    },
    "editor.minimap.enabled": false,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[django-html]": {
        "editor.defaultFormatter": "junstyle.vscode-django-support"
    },
    
}
